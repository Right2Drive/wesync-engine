{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
        "babelrc": false,
        "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "browsers": ["> 1%", "last 2 versions", "not ie <= 8"]
                },
                "modules": false
              }
            ]
        ]
    },
    "babelCore": "@babel/core",
    "useCache": true
  }
}
